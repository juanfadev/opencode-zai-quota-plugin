{
  "name": "opencode-zai-quota-plugin",
  "version": "1.0.0",
  "description": "OpenCode plugin for checking Z.ai GLM API quota and usage statistics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "zai-quota": "dist/integrations/cli/ZaiQuotaCLI.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepare": "husky install || echo 'No husky hooks'",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "opencode",
    "zai",
    "glm",
    "quota",
    "api",
    "typescript",
    "zhipu-ai"
  ],
  "author": "OpenCode Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencode/opencode-zai-quota-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/opencode/opencode-zai-quota-plugin/issues"
  },
  "homepage": "https://github.com/opencode/opencode-zai-quota-plugin#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "zod": "^3.22.4",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/jest": "^29.5.12",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
